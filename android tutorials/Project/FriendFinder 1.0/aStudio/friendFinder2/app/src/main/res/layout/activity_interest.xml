<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4sp"
        android:textAlignment="center"
        android:text="Your Interests: " />

    <TextView android:id="@+id/movie_genres_textView"
        android:layout_width="fill_parent"
        android:text="MovieGenres: "
        android:layout_height="wrap_content"  />

    <TextView android:id="@+id/music_genres_textView"
        android:layout_width="fill_parent"
        android:text="MusicGenres: "
        android:layout_height="wrap_content"  />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4sp"
        android:text="Add 1 MovieGenres: " />

    <EditText android:id="@+id/movie_genres_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4sp"
        android:text="Add 1 MusicGenres: " />

    <EditText android:id="@+id/music_genres_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  />

    <Button android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="center" />
</LinearLayout>