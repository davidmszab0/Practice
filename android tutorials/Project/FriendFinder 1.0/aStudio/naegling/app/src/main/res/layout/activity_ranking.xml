        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="250dp"
        android:layout_weight="0.75"
        android:background="@drawable/assassinate_button"
        android:text="Show All Ranking" />
    
    

</TableLayout>



